
<h1>Articles from the Onion</h1>



<ul>
  {{#each articles}}
  <h3>{{headline}}</h3>
  <p>{{excerpt}}</p>
  <button onclick="modalOpen()">ARTICLE NOTES</button>
  <button>DELETE FROM SAVED</button>

  <div class="modal {{_id}}" id="simpleModal">
    <div class="modal-content">
      <div class="modal-header">
        <span class="closeBtn" id="closeBtn">&times;</span>
        <h2>Notes For Article: {{_id}}</h2>
      </div>
      <div class="modal-body">
        <p>{{friendName}}</p>
<textarea Name="content" ROWS="6" COLS="40"></textarea>
      </div>
      <div class="modal-footer">
        <button>SAVE NOTE</button>
      </div>
    </div>
  </div>

  <hr>
  {{/each}}
</ul>
<script>
  let modal = document.getElementById('simpleModal');
  let closeBtn = document.getElementById('closeBtn');

  closeBtn.addEventListener('click', closeModal);
  window.addEventListener('click', outsideClick);

  modalOpen = () => {
    modal.style.display = 'block';
  }
  function closeModal() {
    modal.style.display = 'none';
  }
  function outsideClick(e) {
    if (e.target == modal)
      modal.style.display = 'none';
  }

</script>
